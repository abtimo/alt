<?xml version="1.0" encoding="UTF-8"?>
<api context="/spike-mock" name="spike-mock" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/">
        <inSequence>
            <payloadFactory description="spike.mock" media-type="json" template-type="default">
                <format>{"spike":"mock"}
                </format>
            </payloadFactory>
            <log category="INFO" logMessageID="true" logFullPayload="true">
                <message>${payload.spike}</message>
            </log>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
</api>