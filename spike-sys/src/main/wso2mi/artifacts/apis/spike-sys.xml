<?xml version="1.0" encoding="UTF-8"?>
<api context="/spike-sys" name="spike-sys" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" uri-template="/">
        <inSequence>
            <payloadFactory media-type="json" template-type="default">
                <format>{ "spike":"sys"}</format>
            </payloadFactory>
            <log category="INFO" logMessageID="true" logFullPayload="true">
                <message>${payload.spike}</message>
            </log>
            <http.get configKey="https-spike-mock">
                <relativePath>/</relativePath>
                <headers>[]</headers>
                <forceScAccepted>false</forceScAccepted>
                <disableChunking>false</disableChunking>
                <forceHttp10>false</forceHttp10>
                <noKeepAlive>false</noKeepAlive>
                <responseVariable>http_get_2</responseVariable>
                <overwriteBody>true</overwriteBody>
            </http.get>
            <log category="INFO" logMessageID="true" logFullPayload="true" description="after.get.https">
                <message> after.get.https ${payload}</message>
            </log>
            <respond/>
        </inSequence>
        <faultSequence>
        </faultSequence>
    </resource>
</api>